@model WebsiteBanHangOnline.Models.Role

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Tạo mới quyền tài khoản
}
@using (Html.BeginForm("Create", "Role", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>ID quyền:</label><span>*</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RoleID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RoleID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Tên quyền:</label><span>*</span>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Mô tả:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group" @*style="margin-left:16px"*@>
                            <label>Trạng thái :</label>
                            <div class="demo-radio-button" style="margin-top:7px">
                                <input name="groupStatus" type="radio" id="radio_7" class="radio-col-success" checked value="1" />
                                <label for="radio_7">Kích hoạt</label>
                                <input name="groupStatus" type="radio" id="radio_9" class="radio-col-danger" value="0" />
                                <label for="radio_9">Khóa</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" style="margin-left:25px">
                        <input type="submit" value="Tạo mới" class="btn btn-rounded btn-success" />
                        <a class="btn btn-rounded btn-danger" href="@Url.Action("Index","Role")">Quay lại</a>
                    </div>

                </div>
               
            </div>
        </div>
    </div>

}
@*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@

