        <div class="widget clearfix">
            <h4 class="pb-15 mb-15 bb-1">Categories</h4>
            <div class="tab-wrapper v1">
                <div class="list">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            if (item.ParentID == -1 && item.MetaDecriptions != "3" && item.MetaDecriptions != "1")
                            {
                                <div class="item">
                                    <div class="tab-btn">
                                        <a href="/san-pham/@item.MetaTitle-@item.ID">@item.Name<em class="mdi mdi-plus"></em></a>
                                    </div>
                                    <div class="tab-content">
                                        <ul class="list list-arrow">
                                            @foreach (var item2 in Model)
                                            {
                                                if (item2.ParentID == item.ID)
                                                {
                                                    <li><a href="/san-pham/@item2.MetaTitle-@item2.ID">@item2.Name</a></li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                            else if (item.ParentID == -1 && item.MetaDecriptions == "3")
                            {
                                <div class="item megamenu">
                                    <div class="tab-btn">
                                        <a href="/san-pham/@item.MetaTitle-@item.ID">@item.Name<em class="mdi mdi-plus"></em></a>
                                    </div>
                                    <div class="tab-content">
                                        <ul class="list list-arrow ">
                                            @foreach (var item2 in Model)
                                            {
                                                if (item2.ParentID == item.ID)
                                                {
                                                    <li>
                                                        <a href="/san-pham/@item2.MetaTitle-@item2.ID">@item2.Name</a>
                                                        <ul class="list list-arrow">
                                                            @foreach (var item3 in Model)
                                                            {
                                                                if (item3.ParentID == item2.ID)
                                                                {
                                                                    <li><a href="/san-pham/@item3.MetaTitle-@item3.ID">@item3.Name</a></li>
                                                                }
                                                            }
                                                        </ul>
                                                    </li>
                                                }

                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                            else if (item.ParentID == -1 && item.MetaDecriptions == "1")
                            {
                                <div class="item">
                                    <div class="no-tab-btn">
                                        <a href="/san-pham/@item.MetaTitle-@item.ID">@item.Name</a>
                                    </div>
                                </div>
                            }
                        }
                    }



                </div>
            </div>
